@article{maleki_balajoo_hippocampal_2023,
	title = {Hippocampal metabolic subregions and networks: Behavioral, molecular, and pathological aging profiles},
	volume = {n/a},
	issn = {1552-5279},
	shorttitle = {Hippocampal metabolic subregions and networks},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1002/alz.13056},
	doi = {10.1002/alz.13056},
	abstract = {INTRODUCTION Hippocampal local and network dysfunction is the hallmark of Alzheimer's disease (AD). METHODS We characterized the spatial patterns of hippocampus differentiation based on brain co-metabolism in healthy elderly participants and demonstrated their relevance to study local metabolic changes and associated dysfunction in pathological aging. RESULTS The hippocampus can be differentiated into anterior/posterior and dorsal cornu ammonis (CA)/ventral (subiculum) subregions. While anterior/posterior CA show co-metabolism with different regions of the subcortical limbic networks, the anterior/posterior subiculum are parts of cortical networks supporting object-centered memory and higher cognitive demands, respectively. Both networks show relationships with the spatial patterns of gene expression pertaining to cell energy metabolism and AD's process. Finally, while local metabolism is generally lower in posterior regions, the anterior–posterior imbalance is maximal in late mild cognitive impairment with the anterior subiculum being relatively preserved. DISCUSSION Future studies should consider bidimensional hippocampal differentiation and in particular the posterior subicular region to better understand pathological aging.},
	language = {en},
	number = {n/a},
